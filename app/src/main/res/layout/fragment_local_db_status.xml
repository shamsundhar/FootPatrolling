<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/ll_local_db"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Local DB Status"
        android:textSize="30dp"
        android:textColor="#4a4397"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <LinearLayout
            android:id="@+id/ll_db_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:id="@+id/tvObservationCheckList"
                android:textSize="20dp"
                android:textColor="#000000"
                android:layout_marginTop="15dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvfacility"
                android:textSize="20dp"
                android:textColor="#000000"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="15dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvProduct"
                android:textSize="20dp"
                android:textColor="#000000"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="15dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvInspection"
                android:textSize="20dp"
                android:textColor="#000000"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="15dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvFootPatrolingSections"
                android:textSize="20dp"
                android:textColor="#000000"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="15dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvObservationCategories"
                android:textSize="20dp"
                android:textColor="#000000"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="15dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvObservation"
                android:textSize="20dp"
                android:textColor="#000000"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="15dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvCompliance"
                android:textSize="20dp"
                android:textColor="#000000"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="15dp"/>

        </LinearLayout>

    </ScrollView>


</LinearLayout>